{
  "manifest_version": 3,
  "name": "Remove Shorts and Reels",
  "version": "1.2",
  "description": "Removes Shorts on YouTube and Reels on Instagram",
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://www.instagram.com/*"],
      "js": ["remove-shorts.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
